# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
[*.{js,jsx,ts,tsx,css,scss,html,md,json,yml,yaml}]
charset = utf-8

# 2 space indentation
[*.{js,jsx,ts,tsx,css,scss,html,md,json,yml,yaml}]
indent_style = space

# Indentation override for all JS under lib directory
[lib/**.js]
indent_style = space
indent_size = 2
